<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainHolder"
    android:background="#fff"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.LandingPage_InfoGraphics">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fake"
        android:src="@drawable/gm_brand_logo"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#555"
        android:text="Loading..."
        android:layout_below="@id/fake"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/Landing_Page_Full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/progress"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/page1Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Tap To Continue"
        style="?android:textAppearanceSmall"
        android:background="@drawable/btn_fff_none_eee_curved"
        android:paddingHorizontal="10dp"
        android:drawableRight="@drawable/proceed"
        android:drawablePadding="5dp"
        android:textColor="#00c"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="1dp"
        android:visibility="invisible"/>
</RelativeLayout>
