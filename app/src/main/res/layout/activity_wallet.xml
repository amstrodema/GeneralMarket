<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:padding="5dp"
    android:id="@+id/swiper"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.Wallet">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomPanel"
            android:layout_alignParentTop="true"
            android:background="#fff"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_gradient3">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="250dp"
                        android:src="@drawable/lady"
                        android:id="@+id/lady"
                        android:background="#fff"
                        android:layout_marginVertical="5dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/lady"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PERSONAL WALLET"
                            android:fontFamily="@font/font_one"
                            android:paddingVertical="5dp"
                            style="?android:textAppearanceMedium"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_marginBottom="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Make and Accept Payments Directly With Zero Bank Transactions"
                            android:textColor="#333"
                            android:lineSpacingExtra="5dp"
                            android:padding="5dp"
                            android:paddingVertical="10dp"
                            android:fontFamily="@font/aladin"
                            android:background="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AVAILABLE EVERYWHERE"
                            android:paddingTop="4.3dp"
                            android:textSize="16sp"
                            android:textColor="#f60"
                            android:paddingLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/font_too"/>
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:background="#fafafa">
                                <Button
                                    android:id="@+id/addMoney"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:text="Credit"
                                    android:textAllCaps="false"
                                    android:background="#0b0"
                                    android:textColor="#fff"
                                    android:layout_marginRight="5dp"/>
                                <Button
                                    android:id="@+id/sendMoney"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:text="Transfer"
                                    android:textAllCaps="false"
                                    android:textColor="#fff"
                                    android:layout_marginRight="5dp"
                                    android:background="#b00"/>
                                <Button
                                    android:id="@+id/copyAcct"
                                    android:layout_width="wrap_content"
                                    android:layout_height="35dp"
                                    android:textAllCaps="false"
                                    android:background="@drawable/no_border_no_fill"
                                    android:paddingLeft="10dp"
                                    android:hint="Copy Account Number"
                                    android:drawableStart="@drawable/copy"/>
                            </LinearLayout>
                        </HorizontalScrollView>


                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/createWalletPanel"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <Button
                        android:id="@+id/createWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Wallet"
                        android:layout_centerInParent="true"
                        android:paddingHorizontal="30dp"
                        android:visibility="gone"/>
                    <ProgressBar
                        android:id="@+id/progBar"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:theme="@style/MyRateBar"
                        android:translationZ="1dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/acctDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_one"
                        android:padding="5dp"
                        android:background="@drawable/blue_gradient2"
                        android:textColor="#fff"
                        android:text="WALLET DETAILS"
                        android:layout_marginBottom="10dp"
                        style="?android:textAppearanceMedium"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Main Account"
                            android:padding="5dp"
                            android:textColor="#050"
                            style="?android:textAppearanceMedium"
                            android:fontFamily="@font/aladin"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#8358;"
                                android:paddingVertical="5dp"
                                android:textColor="#050"/>
                            <TextView
                                android:id="@+id/mainAcct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:padding="5dp"
                                android:textColor="#050"
                                android:fontFamily="@font/aladin"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bonus Account"
                            android:padding="5dp"
                            android:textColor="#050"
                            style="?android:textAppearanceMedium"
                            android:fontFamily="@font/aladin"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#8358;"
                                android:textColor="#050"
                                android:paddingVertical="5dp"/>
                            <TextView
                                android:id="@+id/bonusAcct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#050"
                                android:padding="5dp"
                                android:fontFamily="@font/aladin"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Referral Account"
                            android:padding="5dp"
                            android:textColor="#050"
                            style="?android:textAppearanceMedium"
                            android:fontFamily="@font/aladin"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#8358;"
                                android:textColor="#050"
                                android:paddingVertical="5dp"/>
                            <TextView
                                android:id="@+id/refAcct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#050"
                                android:padding="5dp"
                                android:fontFamily="@font/aladin"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upfront Account"
                            android:padding="5dp"
                            android:textColor="#b00"
                            style="?android:textAppearanceMedium"
                            android:fontFamily="@font/aladin"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#8358;"
                                android:textColor="#b00"
                                android:paddingVertical="5dp"/>
                            <TextView
                                android:id="@+id/upFrontAcct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:padding="5dp"
                                android:textColor="#b00"
                                android:fontFamily="@font/aladin"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:padding="5dp"
                            android:textColor="#000"
                            android:fontFamily="@font/aladin"
                            style="?android:textAppearanceMedium"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="&#8358;"
                                android:textColor="#000"
                                android:paddingVertical="5dp"/>
                            <TextView
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:padding="5dp"
                                android:textColor="#000"
                                android:fontFamily="@font/aladin"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:padding="5dp"
                        android:background="@drawable/blue_gradient2">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aladin"
                            android:padding="5dp"
                            android:hint="Express Trade Code"
                            style="?android:textAppearanceMedium"
                            android:textColor="#fff"
                            android:textColorHint="#aaa"
                            android:singleLine="true"
                            android:background="@drawable/no_border_no_fill"
                            android:id="@+id/expressPay"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/expressPayBtn"
                            android:layout_alignParentLeft="true"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Pay!"
                            android:textAllCaps="true"
                            android:textColor="#fff"
                            android:fontFamily="@font/gothic"
                            android:background="#0b0"
                            android:padding="5dp"
                            android:textSize="15sp"
                            android:id="@+id/expressPayBtn"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:lineSpacingExtra="5dp"
                        android:fontFamily="@font/avata"
                        android:textSize="15sp"
                        android:text="Express transaction is for servicing invoices. Bills for the transaction code will be charged to your personal wallet from here."/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
        <RelativeLayout
            android:id="@+id/bottomPanel"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginBottom="-20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/light_gray_border_filled"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingHorizontal="5dp">

            <Button
                android:id="@+id/home_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/account"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/click_home"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gps"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/click_account"
                android:singleLine="true"
                android:textColor="#ccc"/>

            <Button
                android:id="@+id/gps"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:textColor="#ccc"
                android:textSize="12sp" />

            <Button
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/gps"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/wallet"
                android:singleLine="true"
                android:textColor="#ccc"
                android:textSize="12sp" />

            <Button
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/notification"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/trade2"
                android:singleLine="true"
                android:textColor="#ccc"
                android:textSize="12sp" />


        </RelativeLayout>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
