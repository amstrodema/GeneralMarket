<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.Controller.Account.Account"
    android:background="#f5f5f5">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/store_order2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/back_black_square"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomPanel"
        android:layout_alignParentTop="true"
        android:translationZ="5dp"
        android:scrollbars="none"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/profilePanel"
        android:layout_marginTop="5dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="150dp"
              android:padding="10dp"
              android:layout_marginBottom="10dp">
              <ProgressBar
                  android:id="@+id/profileProBar"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:theme="@style/MyRateBar"
                  android:layout_centerInParent="true"/>
              <LinearLayout
                  android:id="@+id/profileMetaPanel"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:visibility="invisible"
                  android:layout_centerInParent="true">
                  <TextView
                      android:id="@+id/profileName"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Adebayo Naomi"
                      android:fontFamily="@font/dut"
                      android:paddingVertical="5dp"
                      style="?android:textAppearanceMedium"
                      android:textColor="#fff"/>
                  <TextView
                      android:id="@+id/profileMail"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Buy and Pay For Goods Directly With Zero Hidden Charges"
                      android:textColor="#f5f5f5"
                      android:fontFamily="@font/amira"
                      android:paddingBottom="5dp"/>

                  <TextView
                      android:id="@+id/profileCountry"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/gothic"
                      android:text="FEMALE"
                      android:textColor="#fff" />
                  <TextView
                      android:id="@+id/profileTel"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="08137395582"
                      android:paddingVertical="5dp"
                      android:textColor="#fff"
                      android:fontFamily="@font/gothic"/>
                  <Button
                      android:layout_width="wrap_content"
                      android:layout_height="35dp"
                      android:text="Edit Profile"
                      android:textAllCaps="false"
                      android:textColor="#000"
                      android:fontFamily="@font/amira"
                      android:background="@drawable/btn_effect_curved_square"/>

              </LinearLayout>
          </RelativeLayout>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#f5f5f5"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="#f5f5f5">
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:singleLine="true"
                  android:padding="5dp"
                  android:layout_height="wrap_content"
                  android:text="Only For Farm Owners..."
                  android:textColor="#000"
                  android:layout_marginLeft="5dp"
                  android:fontFamily="@font/bodonini"
                  android:layout_centerVertical="true"/>
              <Button
                  android:id="@+id/farmStoreCreate"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:singleLine="true"
                  android:layout_height="35dp"
                  android:text="Add Farm"
                  android:layout_marginVertical="5dp"
                  android:paddingHorizontal="5dp"
                  android:textAllCaps="false"
                  android:background="@drawable/btn_eff_semi_circle"
                  android:textColor="#000"
                  android:layout_alignParentRight="true"/>
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingHorizontal="5dp"
              android:padding="5dp"
              android:textColor="#888"
              android:fontFamily="@font/amira"
              android:layout_marginBottom="15dp"
              android:text="Businesses not regarded as farm will be banned"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:orientation="horizontal"
              android:background="#f5f5f5">
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:singleLine="true"
                  android:padding="5dp"
                  android:layout_height="wrap_content"
                  android:text="Stores Not Within Market"
                  android:fontFamily="@font/bodonini"
                  android:textColor="#000"
                  android:layout_centerVertical="true"/>
              <Button
                  android:id="@+id/standaloneStoreCreate"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:singleLine="true"
                  android:layout_height="35dp"
                  android:text="Add Standalone Store"
                  android:textAllCaps="false"
                  android:background="@drawable/btn_eff_semi_circle"
                  android:paddingHorizontal="8dp"
                  android:textColor="#000"
                  android:layout_alignParentRight="true"/>
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:text="For stores not located inside any market, add Standalone Store. The store will not be linked to any market"
              android:textColor="#888"
              android:layout_marginHorizontal="5dp"
              android:layout_marginBottom="10dp"
              android:fontFamily="@font/amira" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:orientation="horizontal"
              android:background="#f5f5f5">
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:singleLine="true"
                  android:padding="5dp"
                  android:layout_height="wrap_content"
                  android:text="Only Stores Within Market"
                  android:fontFamily="@font/bodonini"
                  android:textColor="#000"
                  android:layout_centerVertical="true"/>
              <Button
                  android:id="@+id/marketStoreCreate"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:singleLine="true"
                  android:layout_height="35dp"
                  android:text="Market Store"
                  android:paddingHorizontal="8dp"
                  android:textAllCaps="false"
                  android:background="@drawable/btn_eff_semi_circle"
                  android:textColor="#000"
                  android:layout_alignParentRight="true"/>
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:textColor="#888"
              android:fontFamily="@font/amira"
              android:layout_marginBottom="15dp"
              android:text="For stores located inside markets only. Check help for more."
              />

          <TextView
              android:textAlignment="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/amira"
              android:textColor="#fff"
              android:textAllCaps="true"
              android:text="MANAGE BUSINESS"
              android:layout_marginBottom="5dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#f5f5f5"
              android:layout_marginBottom="5dp"/>
          <androidx.recyclerview.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/stores">

          </androidx.recyclerview.widget.RecyclerView>
          <androidx.recyclerview.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/farms">

          </androidx.recyclerview.widget.RecyclerView>

      </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/marketPickLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_canvas_hover"
                android:layout_margin="10dp"
                android:id="@+id/cancel_action"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/cancel_action"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SELECT YOUR MARKET"
                    android:fontFamily="@font/font_one"
                    android:paddingTop="5dp"
                    android:textColor="#fff"
                    style="?android:textAppearanceLarge"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read our market policies carefully before proceeding with this step. Any duplicated or policy contradicting market risks demolition. Beware!"
                    android:textColor="#fff"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/amira"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Market Policy"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/amira"
                    android:background="@drawable/btn_effect_curved_square"
                    android:padding="5dp"/>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:padding="14dp">
                <AutoCompleteTextView
                    android:id="@+id/marketAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_border"
                    android:padding="8dp"
                    android:hint="Type Market Name Here"
                    android:textColor="#fff"
                    android:textColorHint="#aaa"
                    style="?android:textAppearanceSmall"
                    android:singleLine="true"
                    android:completionThreshold="1"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:paddingBottom="15dp">
                <Button
                    android:id="@+id/proceed"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Proceed"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:background="@drawable/btn_effect_curved_square"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/amira"
                    android:layout_marginRight="14dp"
                    style="?android:textAppearanceSmall"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions Applies."
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/amira"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Powered By General Market"
                android:textColor="#fff"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/bodonini"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginBottom="-20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/light_gray_border_filled"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingHorizontal="5dp">

        <Button
            android:id="@+id/home_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/account"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_home"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/gps"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_account_inverted"
            android:singleLine="true"
            android:textColor="#ccc"/>

        <Button
            android:id="@+id/gps"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="5dp"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:textColor="#ccc"
            android:textSize="12sp" />

        <Button
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gps"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/wallet2"
            android:singleLine="true"
            android:textColor="#ccc"
            android:textSize="12sp" />

        <Button
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/notification"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/trade2"
            android:singleLine="true"
            android:textColor="#ccc"
            android:textSize="12sp" />


    </RelativeLayout>
</RelativeLayout>
