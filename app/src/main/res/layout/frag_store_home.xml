<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.Controller.Store.FragmentStoreHome">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/thisStoreHolder"
        android:background="@drawable/blue_gradient2"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingHorizontal="5dp"
                android:text="Salmatra Global Company"
                android:textSize="25sp"
                android:fontFamily="@font/dut"
                android:textColor="#fff"
                android:layout_marginHorizontal="5dp"
                android:paddingVertical="15dp"
                android:id="@+id/thisStoreName"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/thisStoreImage"
                    android:layout_width="match_parent"
                    android:layout_height="287dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/store2"
                    android:layout_centerVertical="true"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/camera"
                    android:layout_alignRight="@id/thisStoreImage"
                    android:layout_alignBottom="@id/thisStoreImage"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:id="@+id/thisStoreImageUploadBtn"
                    android:background="@drawable/circle_wite"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_wite_small"
                android:paddingVertical="5dp"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:id="@+id/mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"/>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="75dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/back_black"
                    android:layout_toLeftOf="@id/mid"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:id="@+id/storeReview"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:text="ADD REVIEW"
                        android:textColor="#fff"
                        android:layout_below="@+id/reviewPix"
                        android:fontFamily="@font/aladin"/>

                    <ImageView
                        android:id="@+id/reviewPix"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_wite"
                        android:src="@drawable/review_add"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="8dp"/>
                    <Button
                        android:id="@+id/thisStoreReview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="75dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/back_black"
                    android:layout_toRightOf="@id/mid"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/entaReview"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:text="ENTER STORE"
                        android:textColor="#fff"
                        android:layout_below="@+id/entaPix"
                        android:fontFamily="@font/aladin"/>

                    <ImageView
                        android:id="@+id/entaPix"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_wite"
                        android:src="@drawable/proceed"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginVertical="8dp"/>
                    <Button
                        android:id="@+id/thisStoreBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>

                </RelativeLayout>
            </RelativeLayout>

            <TextView
                style="?android:textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editStore"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/bodonini"
                android:padding="5dp"
                android:text="Hi, drop a review to let others know how you feel about this store"
                android:textAlignment="center"
                android:textColor="#aaa" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="10dp"
                android:background="@drawable/back_wite_small">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESCRIPTION"
                        android:id="@+id/thisStoreDescriptionLabel"
                        android:textColor="#fff"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/font_one"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" edit "
                        android:layout_toRightOf="@id/thisStoreDescriptionLabel"
                        android:textColor="#ccc"
                        android:background="@drawable/gray_border_curve"
                        android:id="@+id/editStore"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="0"
                        android:theme="@style/MyRateBar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/storeRating"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We deal in purchase and sales. Apparently we sell based on commission."
                    android:background="#fff"
                    android:lineSpacingExtra="5dp"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:fontFamily="@font/font_too"
                    android:id="@+id/thisStoreDescription"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/back_wite_small"
                android:layout_marginTop="-5dp"
                android:paddingTop="20dp"
                android:paddingHorizontal="5dp"
                android:paddingBottom="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/availabilty"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:id="@+id/sideImage2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/sideImage2"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:fontFamily="@font/font_too"
                        android:textSize="17sp"
                        android:lineSpacingExtra="5dp"
                        android:id="@+id/availabilty"
                        android:textColor="#000"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="1dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/time"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:id="@+id/sideImage3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/sideImage3"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:fontFamily="@font/font_too"
                        android:textSize="17sp"
                        android:id="@+id/store_time"
                        android:textColor="#000"
                        android:text=""/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingHorizontal="5dp"
                    android:layout_marginTop="1dp"
                    android:paddingVertical="8dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/delivery"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:id="@+id/sideImage4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/sideImage4"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:id="@+id/delivery"
                        android:padding="5dp"
                        android:fontFamily="@font/font_too"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:text=""/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="1dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/contact"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:padding="5dp"
                        android:background="@drawable/circle_wite"
                        android:id="@+id/sideImage5"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/font_too"
                        android:layout_toRightOf="@+id/sideImage5"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/no_border_no_fill"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp"
                        android:id="@+id/contact"
                        android:textAlignment="textStart"
                        android:textColor="#000"
                        android:text="Contact Store Owner"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/addStockBtnPanel"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="1dp"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/stock_add"
                        android:background="@drawable/circle_wite"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:layout_marginRight="25dp"
                        android:id="@+id/sideImage1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/no_border_no_fill"
                        android:paddingVertical="5dp"
                        android:layout_toRightOf="@+id/sideImage1"
                        android:paddingHorizontal="10dp"
                        android:fontFamily="@font/font_too"
                        android:textAlignment="textStart"
                        android:textSize="17sp"
                        android:textAllCaps="false"
                        android:id="@+id/addStock"
                        android:text="Add New Stock"
                        android:textColor="#000"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="1dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/locate"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:id="@+id/locate"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/locate"
                        android:layout_centerVertical="true"
                        android:id="@+id/thisStoreLocation"
                        android:padding="5dp"
                        android:fontFamily="@font/font_too"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:text=""/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/back_wite_small">
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="55dp"
                   android:layout_centerInParent="true"
                   android:background="@drawable/back_black"
                   android:paddingHorizontal="8dp">
                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sound Store Bell"
                       android:textColor="#fff"
                       android:background="@android:color/transparent"
                       android:id="@+id/currentlyHere"
                       android:layout_marginRight="8dp"
                       android:layout_centerVertical="true"/>
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/notification_floor2"
                       android:layout_toRightOf="@id/currentlyHere"
                       android:layout_centerVertical="true"
                       android:background="@drawable/circle_wite"
                       android:padding="6dp"/>
               </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/currentlyHere"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/bodonini"
                android:padding="5dp"
                android:text="Notify Store Owner Of Your Presence"
                android:textAlignment="center"
                android:textColor="#aaa" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BAN"
                android:id="@+id/banBtn"
                android:background="@drawable/btn_effect_curved_square"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NO REVIEWS YET"
                    android:textAlignment="center"
                    android:textColor="#aaa"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/noReviewLabel"
                    android:layout_centerInParent="true"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/thisStoreReviewView"
                    android:background="#eee">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/creator"
                android:visibility="gone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/market"
                android:visibility="gone"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
