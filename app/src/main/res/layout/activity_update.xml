<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f60"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.Update">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_margin="10dp"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/downl"
                android:scaleType="center"
                android:id="@+id/overrideBtn"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE AVAILABLE"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                style="?android:textAppearanceLarge"
                android:fontFamily="@font/dut"
                android:lineSpacingExtra="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A newer version of General Market is available"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/gothic"
                android:lineSpacingExtra="5dp"
                android:id="@+id/timerDisplay"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/gothic"
                    android:lineSpacingExtra="5dp"
                    android:background="@drawable/gray_border_curve"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/update"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ignore"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/gothic"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/gray_border_curve"
                    android:layout_weight="1"
                    android:id="@+id/ignore"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
