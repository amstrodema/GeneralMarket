<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="8dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    android:paddingVertical="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amira"
        android:lineSpacingExtra="2dp"
        android:textColor="#333"
        android:id="@+id/message"
        android:text="You just received the buns and stereo planethe buns and stereo planethe buns and stereo planethe buns and stereo planethe buns and stereo plane"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adebayo Philip (December 23, 2020 : 10:25pm)"
        android:fontFamily="@font/bodonini"
        android:layout_marginTop="3dp"
        android:id="@+id/messageMeta"/>
</LinearLayout>
</androidx.cardview.widget.CardView>