<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swiper"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.Controller.Store.FragStockStore">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:translationZ="1dp"
        android:theme="@style/MyRateBar"
        android:id="@+id/progress"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/topAnchor">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/topPanel"
            android:paddingVertical="10dp"
            android:background="#333"
            android:visibility="gone">
            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:drawableRight="@drawable/back_arrow"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="6dp"
                android:paddingRight="5dp"
                android:background="@drawable/no_border_no_fill"
                android:id="@+id/stopSearch"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="Type Search Words"
                android:paddingLeft="5dp"
                android:paddingRight="42dp"
                android:textColor="#fff"
                android:fontFamily="@font/amira"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/stopSearch"
                android:textColorHint="#aaa"
                android:singleLine="true"
                android:id="@+id/searchString"
                android:background="@drawable/no_border_no_fill"
                android:maxLength="25"/>
            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:id="@+id/searchBtn"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/topPanel2"
            android:paddingVertical="10dp"
            android:background="@drawable/blue_gradient2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="GENERAL MARKET - STOCKS"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:fontFamily="@font/gothic"
                android:singleLine="true"
                style="?android:textAppearanceMedium"
                android:paddingRight="8dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/cartView"/>
            <ImageView
                android:id="@+id/cartView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart_view2"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/SearchAccess"
                android:layout_marginRight="5dp"
                android:padding="2dp"/>
            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:id="@+id/SearchAccess"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Data"
        android:id="@+id/noData"
        android:background="@android:color/transparent"
        android:textColor="#000"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomPanel"
        android:background="#eee"
        android:id="@+id/categoryItemsRecyclerView"
        android:layout_below="@id/topAnchor">

    </androidx.recyclerview.widget.RecyclerView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_float"
        android:layout_alignParentRight="true"
        android:id="@+id/homeBtnx"
        app:backgroundTint="#003"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="65dp"/>
    <RelativeLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginBottom="-20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/light_gray_border_filled"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingHorizontal="5dp">

        <Button
            android:id="@+id/home_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/account_floor"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_home" />

        <Button
            android:id="@+id/account_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/gps"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_farm"/>

        <Button
            android:id="@+id/gps"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/store_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gps"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_market"/>

        <Button
            android:id="@+id/store_ll_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/store_floor"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_store"/>


    </RelativeLayout>

    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
