<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/blue_gradient2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_canvas_click"
                android:layout_margin="10dp"
                android:id="@+id/cancel_action"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/cancel_action"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OWNERSHIP INVOICE"
                    android:fontFamily="@font/font_one"
                    android:paddingVertical="5dp"
                    android:textColor="#fff"
                    style="?android:textAppearanceLarge"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read our store ownership policies carefully before you proceed with this step"
                    android:paddingVertical="5dp"
                    android:textColor="#f60"
                    android:textSize="16sp"
                    android:fontFamily="@font/font_too"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ownership Fee Is Not Refundable."
                    android:paddingVertical="5dp"
                    android:textSize="16sp"
                    android:textColor="#fff"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Ownership Policy"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:padding="5dp"/>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothic"
                android:padding="5dp"
                android:textColor="#4d4c53"
                android:textAllCaps="true"
                android:text="Deliverables"
                android:textSize="15sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:padding="5dp"
                        android:fontFamily="@font/gothic"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/ownerType"
                        android:padding="5dp"
                        android:fontFamily="@font/dut"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:text="&#8358;" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aladin"
                        android:id="@+id/storeCost"
                        android:padding="5dp" />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingTop="10dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:padding="5dp"
                    android:textColor="#000"
                    style="?android:textAppearanceMedium"
                    android:fontFamily="@font/amira"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#8358;"
                        style="?android:textAppearanceMedium"
                        android:textColor="#000"
                        android:fontFamily="@font/amira"
                        android:paddingVertical="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalCost"
                        android:padding="5dp"
                        android:textColor="#000"
                        style="?android:textAppearanceMedium"
                        android:fontFamily="@font/amira"/>

                </LinearLayout>

            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_border"
                android:text="Pay 15"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/amira"
                android:id="@+id/payBtn"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>