<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:paddingBottom="15dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/general_market_logo_000c"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Quick Registration"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/gothic"
            android:background="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceLarge" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="FIRST NAME"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/amira"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Name Here"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:textColor="#000"
            android:background="@drawable/gray_border_curve"
            android:fontFamily="@font/amira"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/regFname"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="LAST NAME"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/amira"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Last Name Here"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:textColor="#000"
            android:background="@drawable/gray_border_curve"
            android:fontFamily="@font/amira"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/regLName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/amira"
            android:text="EMAIL ADDRESS"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your email Address"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:textColor="#000"
            android:background="@drawable/gray_border_curve"
            android:fontFamily="@font/amira"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/regEmail"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/amira"
            android:text="VALID TELEPHONE NUMBER"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your Phone Number"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:textColor="#000"
            android:background="@drawable/gray_border_curve"
            android:fontFamily="@font/amira"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/regPhone"
            android:inputType="phone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/amira"
            android:text="COUNTRY"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Country Name Here"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:textColor="#000"
            android:background="@drawable/gray_border_curve"
            android:fontFamily="@font/amira"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/regCountry"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/amira"
            android:text="PASSWORD"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum of 6 characters"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:textColor="#000"
            android:background="@drawable/gray_border_curve"
            android:fontFamily="@font/amira"
            android:textAppearance="?android:textAppearanceSmall"
            android:id="@+id/regPassword"
            android:inputType="textPassword"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:fontFamily="@font/amira"
            android:text="CONFIRM PASSWORD"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum of 6 characters"
            android:paddingHorizontal="5dp"
            android:paddingVertical="15dp"
            android:textColor="#000"
            android:background="@drawable/gray_border_curve"
            android:fontFamily="@font/amira"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginBottom="5dp"
            android:id="@+id/regConfirmPass"
            android:inputType="textPassword"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/store1"
            android:id="@+id/regAdv"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT REGISTRATION"
            android:textColor="#000"
            android:fontFamily="@font/amira"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/gray_border_curve"
            android:id="@+id/regUserBtn"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPLETE REGISTRATION"
            android:textColor="#000"
            android:fontFamily="@font/amira"
            android:visibility="invisible"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/gray_border_curve" />
    </LinearLayout>
</ScrollView>
