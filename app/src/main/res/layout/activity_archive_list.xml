<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.ArchiveList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/topAnchor">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/topPanel"
            android:paddingVertical="10dp"
            android:background="#003"
            android:visibility="gone">
            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:drawableRight="@drawable/back_arrow"
                android:background="@drawable/blue_tiny_border"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="6dp"
                android:paddingRight="5dp"
                android:id="@+id/stopSearch"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="Item Search Keywords"
                android:paddingLeft="5dp"
                android:paddingRight="42dp"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/stopSearch"
                android:textColorHint="#aaa"
                android:singleLine="true"
                android:id="@+id/searchStringField"
                android:focusedByDefault="false"
                android:background="@drawable/no_border_no_fill"
                android:maxLength="25"/>
            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:id="@+id/farmSearch"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/topPanel2"
            android:paddingVertical="10dp"
            android:background="#003">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="GENERAL MARKET - G.M."
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                style="?android:textAppearanceMedium"/>
            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:id="@+id/SearchAccess"/>
        </RelativeLayout>
    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topAnchor"
            android:layout_above="@id/bottomPanel"
            android:id="@+id/archiveRecyclerView"
            android:paddingHorizontal="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="20dp">
        </androidx.recyclerview.widget.RecyclerView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/homeBtnx"
        app:backgroundTint="#003"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:src="@drawable/add_float"/>
    <RelativeLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginBottom="-20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/light_gray_border_filled"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingHorizontal="5dp">

        <Button
            android:id="@+id/home_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/account_floor"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_home" />

        <Button
            android:id="@+id/account_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/gps"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_recipe"/>

        <Button
            android:id="@+id/gps"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/store_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gps"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_market"/>

        <Button
            android:id="@+id/store_ll_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/store_floor"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/click_store"/>


    </RelativeLayout>
</RelativeLayout>
