<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.FarmAdd">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/store_order2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back_black"
        android:paddingVertical="15dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RENT FARM"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:id="@+id/activityTitle"
                    android:fontFamily="@font/font_one"
                    style="?android:textAppearanceLarge"
                    android:padding="15dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/newStoreImage"
                        android:background="@drawable/back_wite_small"/>
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/camera"
                        android:padding="5dp"
                        android:background="@drawable/circle_wite"
                        android:id="@+id/uploadPicker"
                        android:layout_alignRight="@id/newStoreImage"
                        android:layout_alignBottom="@id/newStoreImage"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Farm Name"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/font_one"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Farm Name"
                    android:padding="5dp"
                    style="?android:textAppearanceSmall"
                    android:textColorHint="#aaa"
                    android:singleLine="true"
                    android:fontFamily="@font/castle"
                    android:textColor="#fff"
                    android:background="@drawable/gray_border"
                    android:id="@+id/newStoreName"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#fff"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/font_one"
                    android:paddingVertical="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe this farm"
                    android:padding="5dp"
                    style="?android:textAppearanceSmall"
                    android:textColorHint="#aaa"
                    android:fontFamily="@font/castle"
                    android:textColor="#fff"
                    android:singleLine="true"
                    android:background="@drawable/gray_border"
                    android:id="@+id/newStoreDesc"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:fontFamily="@font/font_one"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Help us locate this farm"
                    android:padding="5dp"
                    style="?android:textAppearanceSmall"
                    android:textColorHint="#aaa"
                    android:fontFamily="@font/castle"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:background="@drawable/gray_border"
                    android:id="@+id/newStoreLocation"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery Services Available"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:fontFamily="@font/font_one"
                    android:layout_marginTop="15dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/bool"
                    android:id="@+id/newFarmDelivery"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_effect_curved_square"
                    android:paddingVertical="8dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opening Days"
                    android:fontFamily="@font/font_one"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Everyday"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:textColor="#fff"
                        android:onClick="disableOthersRadioView"
                        android:id="@+id/newStoreEveryday"
                        android:checked="true"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Week Days"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:textColor="#fff"
                        android:onClick="disableOthersRadioView"
                        android:id="@+id/newStoreWeekDays"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weekends"
                        android:id="@+id/newStoreWeekEnds"
                        android:padding="5dp"
                        android:textColor="#fff"
                        android:onClick="disableOthersRadioView"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opening Soon"
                        android:textColor="#fff"
                        android:id="@+id/newStoreToOpen"
                        android:onClick="disableOthersRadioView"
                        android:padding="5dp"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Temporarily Closed"
                        android:id="@+id/newStoreTempClosed"
                        android:padding="5dp"
                        android:textColor="#fff"
                        android:onClick="disableOthersRadioView"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:textColor="#fff"
                        android:id="@+id/newStoreOthers"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"/>
                </RadioGroup>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/radioOtherOptions"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ccc"
                        android:textSize="1dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Opening Days"
                        android:textColor="#fff"
                        android:id="@+id/newStoreOpeningDaysLabel"
                        android:padding="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monday"
                            android:textColor="#fff"
                            android:id="@+id/newStoreMon"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tuesday"
                            android:textColor="#fff"
                            android:id="@+id/newStoreTue"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wednesday"
                            android:textColor="#fff"
                            android:id="@+id/newStoreWed"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thursday"
                            android:textColor="#fff"
                            android:id="@+id/newStoreThur"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Friday"
                            android:textColor="#fff"
                            android:id="@+id/newStoreFri"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saturday"
                            android:textColor="#fff"
                            android:id="@+id/newStoreSat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunday"
                            android:textColor="#fff"
                            android:id="@+id/newStoreSun"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ccc"
                    android:textSize="1dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opening Time"
                    android:fontFamily="@font/font_one"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What time does this farm open"
                    android:inputType="time"
                    android:padding="5dp"
                    style="?android:textAppearanceSmall"
                    android:textColorHint="#aaa"
                    android:fontFamily="@font/castle"
                    android:textColor="#fff"
                    android:background="@drawable/gray_border"
                    android:id="@+id/newStoreOpeningTime"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Closing Time"
                    android:fontFamily="@font/font_one"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="datetime|time"
                    android:padding="5dp"
                    style="?android:textAppearanceSmall"
                    android:textColorHint="#aaa"
                    android:fontFamily="@font/castle"
                    android:textColor="#fff"
                    android:background="@drawable/gray_border"
                    android:hint="What time does this farm close"
                    android:id="@+id/newStoreClosingTime"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Farm Telephone"
                    android:fontFamily="@font/font_one"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="018971257"
                    android:padding="5dp"
                    style="?android:textAppearanceSmall"
                    android:textColorHint="#aaa"
                    android:fontFamily="@font/castle"
                    android:textColor="#fff"
                    android:background="@drawable/gray_border"
                    android:inputType="phone"
                    android:id="@+id/newStorePhone"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="register farm"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/font_one"
                    android:background="@drawable/btn_effect_curved_square"
                    android:id="@+id/newStoreSaveBtn"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
   

</RelativeLayout>
