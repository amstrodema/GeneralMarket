<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient2"
    tools:context="comgalaxyglotech.confirmexperts.generalmarket.Archive">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:textAppearanceLarge"
        android:textAlignment="center"
        android:paddingVertical="15dp"
        android:paddingHorizontal="5dp"
        android:background="#fff"
        android:textColor="#000"
        android:text="Napeloen Wild James"
        android:fontFamily="@font/font_too"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:id="@+id/archiveName"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/archiveName">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#003"
                android:layout_marginTop="8dp"
                android:paddingVertical="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/archiveViewImage"
                    android:padding="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#fff"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Archive Author:"
                    android:padding="5dp"
                    android:gravity="end"
                    android:fontFamily="@font/aladin"
                    android:textColor="#aaa"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gobayi Ayobami"
                    android:gravity="end"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/bodonini"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:id="@+id/archiveAuthor"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" edit "
                    android:layout_toRightOf="@id/thisStoreDescriptionLabel"
                    android:textColor="#008"
                    android:id="@+id/editFarm"
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/btn_eff_semi_circle"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOCUS"
                android:background="#003"
                android:textColor="#fff"
                android:padding="5dp"
                style="?android:textAppearanceMedium"
                android:visibility="gone"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_maroon_straight"
                android:paddingVertical="8dp"
                android:paddingHorizontal="5dp"
                android:visibility="gone">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dates stem from a known specie of incorrigble food products know as Themana. It is know for numerous health benefits ranging from erectile disyfunction to any other thing."
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/font_too"
                android:background="#fff"
                android:textColor="#000"
                android:id="@+id/archiveDetails"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Web Resources"
                android:textColor="#fff"
                android:background="#333"
                android:fontFamily="@font/aladin"
                android:layout_marginTop="5dp"
                android:padding="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.firebrand.com/checkus"
                android:background="#fff"
                android:textColor="#000"
                android:padding="5dp"
                android:fontFamily="@font/bodonini"
                android:singleLine="true"
                android:id="@+id/archiveLink"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signature"
                android:background="#333"
                android:fontFamily="@font/aladin"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:padding="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WhatMan Store, illupeju Ibadan. Call us on, 01-378-7890"
                android:padding="5dp"
                android:lineSpacingExtra="5dp"
                android:textColor="#000"
                android:fontFamily="@font/font_too"
                android:background="#fff"
                android:id="@+id/archiveSig"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#eee">
                <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MORE"
                    android:layout_margin="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/black_thick_border"
                    android:textColor="#900"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
